{
  "name": "autopage",
  "version": "1.0.0",
  "description": "copycat web surfing",
  "main": "./out/main/index.js",
  "author": "leesoobo",
  "homepage": "https://github.com/soobolee/auto-page",
  "build": {
    "productName": "AUTOPAGE",
    "appId": "com.leesoobo.autopage",
    "asar": true,
    "mac": {
      "target": [
        "default"
      ],
      "icon": "build/icon.ico"
    },
    "dmg": {
      "title": "AUTOPAGE",
      "icon": "build/icon.png"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "perMachine": true,
      "language": 1042,
      "installerIcon": "build/icon.ico",
      "shortcutName": "AUTOPAGE",
      "artifactName": "AUTOPAGE-${version}.${ext}",
      "uninstallDisplayName": "AUTOPAGE"
    },
    "directories": {
      "buildResources": "./build/",
      "output": "./dist/"
    }
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ignore-pattern 'out'",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "prepare": "husky install"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@tailwindcss/postcss": "^4.0.5",
    "nanoid": "^5.0.9",
    "postcss": "^8.5.1",
    "react-router": "^7.1.5",
    "tailwindcss": "^4.0.5",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@electron/packager": "^18.3.6",
    "@eslint/js": "^9.20.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^31.0.2",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "eslint": "^9.20.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^15.14.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.4.3",
    "prettier": "3.5.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "vite": "^5.3.1"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --cache --write"
    ]
  }
}
